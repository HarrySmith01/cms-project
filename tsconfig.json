{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "rootDir": ".",
    "outDir": "./dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    // relax strict checks for now
    "strict": false,
    "strictPropertyInitialization": false,
    "strictNullChecks": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "types": ["node", "jest"]
  },

  "include": ["src/entities/**/*.ts", "mikro-orm.config.ts"],

  "exclude": [
    "node_modules",
    "src/wueues",
    "src/utils/runtime",
    "src/subscribers",
    "tests",
    "scripts"
  ]
}
