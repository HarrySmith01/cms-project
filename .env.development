# File: .env.example
# Description: Environment variable examples for CMS Project, including database, JWT, and OAuth settings.
# Created: July 25, 2025 09:50 IST
# Updated: July 25, 2025 09:50 IST

# Database configuration
DB_TYPE=mysql
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=      # leave blank if WAMP MySQL has no password
DB_NAME=cms_dev

# MongoDB configuration
MONGO_URL=mongodb://localhost:27017/cms

# Redis configuration
REDIS_URL=redis://localhost:6379

# Session configuration
SESSION_SECRET=your_session_secret_here

# JWT configuration
JWT_SECRET=your_jwt_secret_here
ACCESS_TOKEN_EXPIRY=15m
REFRESH_TOKEN_EXPIRY=1d

# OAuth2 configuration
OAUTH2_AUTH_URL=https://provider.com/oauth2/authorize
OAUTH2_TOKEN_URL=https://provider.com/oauth2/token
OAUTH2_CLIENT_ID=your_oauth2_client_id
OAUTH2_CLIENT_SECRET=your_oauth2_client_secret
OAUTH2_CALLBACK_URL=http://localhost:3000/api/auth/oauth2/callback


# Allows requests only from whitelisted IPs (env: IP_WHITELIST comma-separated).
# Allows only users with elevated roles (SysUserRole.elevated_privilege = true).
IP_WHITELIST